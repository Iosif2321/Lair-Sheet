    {
      "_id": "Scb7sGOnXrXsFkaM",
      "name": "Смертоносный прыжок",
      "type": "feat",
      "img": "icons/magic/fire/projectile-wave-arrow.webp",
      "effects": [],
      "folder": "2G7GN3KkPFCIwVHZ",
